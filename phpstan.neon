includes:
    - vendor/phpstan/phpstan-symfony/extension.neon
    - vendor/phpstan/phpstan-doctrine/extension.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon

parameters:

    paths:
        - src
        - tests

    level: 7

    tmpDir: "%rootDir%/../../../phpstan"

    symfony:
        container_xml_path: %rootDir%/../../../var/cache/dev/srcApp_KernelDevDebugContainer.xml

    excludes_analyse:
        - "%rootDir%/../../../src/Migrations/*"
        - "%rootDir%/../../../src/Validator/Constraints/*"

    autoload_files:
        - vendor/bin/.phpunit/phpunit-7.5-0/vendor/autoload.php

    ignoreErrors:
        - '#Cannot call method (.*) on (.*)\|null\.#'
        - '#Method (.*)Repository\(\) should return (.*)Repository but returns (.*).#'
        - '#Call to an undefined method Symfony\\Component\\Console\\Output\\OutputInterface::section\(\)\.#'
