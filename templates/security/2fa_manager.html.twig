{% extends 'base.html.twig' %}

{% block title %}{{ formHeader }} | mintMe{% endblock %}

{% block content %}
    {% if backupCodes %}
        <div class="container text-center">
            <div class="row py-3 justify-content-center">
                <div class="col-xs-12 col-lg-10 col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            Two-Factor authentication backup codes
                        </div>
                        <div class="card-body">
                            <p>
                                <small>
                                Should you ever lose your phone, each of these recovery codes can be used
                                one time each to regain access to your account.
                                Please save them in a safe place, or you <b>will</b> lose access to your account.
                                </small>
                            </p>
                            <code class="html hljs">
                                {% for backupCode in backupCodes %}
                                    <p>{{ backupCode }}</p>
                                {% endfor %}
                            </code>
                            <p><a href="{{ path('settings') }}" class="btn btn-primary" role="button">Proceed</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container text-center">
            <div class="row py-3 justify-content-center">
                <div class="col col-lg-11">
                    {% include 'security/2fa_settings.html.twig' %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}