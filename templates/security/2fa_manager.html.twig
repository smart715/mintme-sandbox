{% extends 'base.html.twig' %}

{% block title %}{{ formHeader }} | mintMe{% endblock %}

{% block content %}
    {% if backupCodes %}
        <div class="container text-center">
            <div class="row pt-5 justify-content-center">
                <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-header">
                            Two-Factor authentication backup codes
                        </div>
                        <div class="card-body text-center">
                            <p>
                                <small>
                                    Should you ever lose your phone, each of these recovery codes can be used
                                    one time each to regain access to your account.
                                    Please save them in a safe place, or you <b>will</b> lose access to your account.
                                </small>
                            </p>
                            <code class="html hljs text-white">
                                {% for backupCode in backupCodes %}
                                    <p>{{ backupCode }}</p>
                                {% endfor %}
                            </code>
                            <p><a href="{{ path('settings') }}" class="btn btn-primary" role="button">Back to settings</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {% include 'security/2fa_settings.html.twig' %}
    {% endif %}
{% endblock %}
{% block pagescripts %}
    <script nonce="{{ csp_nonce('script') }}" src="{{ asset('build/2FASettings.js') }}"></script>
{% endblock %}