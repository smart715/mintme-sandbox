<!DOCTYPE html>
<html lang="en" class="h-100vh">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>
            {% block title %}MINTME{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/main.css') }}">
        {% endblock stylesheets %}
    </head>
    <body class="h-100vh {% block bodyclass %}{% endblock %}">
        {% block body %}
            {% block header %}
                <nav class="navbar navbar-expand-lg top-navbar pt-3 pb-0" id="navbar">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            <img src="{{ asset('build/images/main-logo.png') }}" height="40" alt="MINTME">
                        </a>
                        <button @click="toggleNavbarMenu" class="navbar-toggler" type="button" :aria-expanded="showNavbarMenu" aria-label="Toggle Navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item pr-0 pr-3">
                                    <input
                                        placeholder="Search for token... Use token name or wallet address"
                                        class="search form-control"
                                        type="search"
                                        aria-label="Search"
                                    >
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-3">My Token</a>
                                </li>
                                <li class="nav-item active">
                                    <a href="#" class="nav-link px-3">Trading</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-3">Wallet</a>
                                </li>
                                <li class="nav-item d-none d-lg-block">
                                    <div id="nav-profile" class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle ml-2" type="button" aria-haspopup="true" aria-expanded="false"></button>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock header %}
            {% block main %}
                <div class="d-table w-100 h-100vh">
                    <div class="d-table w-100 h-100 gradient-bg">
                        <div class="d-table-row">
                            <div class="d-table-cell header-bg"></div>
                        </div>
                        <div class="d-table-row">
                            <div class="d-table-cell ">
                                {% block content %}{% endblock content %}
                            </div>
                        </div>
                    </div>
                    <div class="d-table-row">
                        <div class="d-table-cell footer-bg"></div>
                    </div>
                </div>
            {% endblock main %}
            {% block footer %}
                <div class="main-footer"></div>
            {% endblock footer %}
        {% endblock body %}
        {% block javascripts %}{% endblock javascripts %}
    </body>
</html>