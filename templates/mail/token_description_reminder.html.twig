{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img alt="Description" src="{{ absolute_url(asset('build/images/mail-description.png')) }}" width="120" class="img-build-v0" />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ nickname }}</p>
                    <p class="p-second-line">{% trans with {'%tokenName%': tokenName} %} token_reminder.msg.description {% endtrans %}
                    </p>
                    <p class="p-third-line">{% trans %} token_reminder.msg.description.2 {% endtrans %},
                    </p>
                    <p class="p-second-line">{% trans %} token_reminder.msg.description.to_do_that {% endtrans%}<a href="{{ absolute_url(path('token_create')) }}/{{ tokenName }}" class="p-a-link" target="_blank"> {% trans %} token_reminder.msg.go_here {% endtrans %}</a> {% trans %} token_reminder.msg.click_edit {% endtrans %}.
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
