{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img alt="Token" src="{{ absolute_url(asset('build/images/mail-token.png')) }}" width="120" class="img-build-v3" />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ tokenOwnerNickname }}</p>

                    <p class="p-deploy-notification-common-first-line p-mail-header">
                        {% trans with {'%userNickname%': notifierNickname} %} email.deploy_notification.p_1 {% endtrans %}
                    </p>
                    <p class="p-deploy-notification-common-second-line">
                        {% trans with {'%price%': usdDeployPrice} %} email.deploy_notification.p_2 {% endtrans %}
                    </p>
                    <p class="p-deploy-notification-last-line">
                        {% trans with {'%deployUrl%': deployUrl} %} email.deploy_notification.p_3 {% endtrans %}
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
