{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="table-border"
            bgcolor="#ffffff"
        >
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img
                        alt="Block"
                        src="{{ absolute_url(asset('build/images/mail-blocked-user.png')) }}"
                        width="120"
                        class="img-build-v1"
                    />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ nickname }}</p>
                    <p class="p-second-line">
                        {% trans with {'%hours%': maxHours} %} login.user_blocked {% endtrans %}
                    </p>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
