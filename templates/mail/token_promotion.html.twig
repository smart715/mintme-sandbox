{% extends 'mail/layout.html.twig' %}
{% set headerAsset = 'mail_promotion_header.png' %}
{% set hideActivelySocialMedia = true %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td width="600" class="td-body pl-3 pr-3 line-height-1" bgcolor="#ffffff">
                    <p>{% trans %} hello {% endtrans %} {{ nickname }}</p>
                    <p>{% trans with {'%url%': url} %} mail.token_promotion.text_1 {% endtrans %}</p>
                    <p>{% trans %} mail.token_promotion.text_2 {% endtrans %}</p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td width="400" class="td-body pl-3 pr-3 line-height-1" bgcolor="#ffffff">
                    <p class="font-weight-bold promotion-h2">{% trans %} mail.token_promotion.text_3 {% endtrans %}</p>
                    <p>{% trans %} mail.token_promotion.text_4 {% endtrans %}</p>
                </td>
                <td width="130" class="pl-3 pr-3 line-height-1" bgcolor="#ffffff">
                    <img
                        alt="{% trans %} mail.token_promotion.text_3 {% endtrans %}"
                        src="{{ absolute_url(asset('build/images/mail_promotion_noticed.png')) }}"
                        width="130"
                        class="img-common"
                    />
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
