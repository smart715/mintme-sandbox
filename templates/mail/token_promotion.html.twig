                <td width="400" class="td-body pl-3 pr-3 line-height-1" bgcolor="#ffffff">
                    <p class="font-weight-bold promotion-h2">{% trans %} mail.token_promotion.text_5 {% endtrans %}</p>
                    <p>{% trans %} mail.token_promotion.text_6 {% endtrans %}</p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
