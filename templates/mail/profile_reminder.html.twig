{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img alt="Token" src="{{ absolute_url(asset('build/images/mail-token.png')) }}" width="120" class="img-build-v3" />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ nickname }}</p>
                    <p class="p-second-line">{% trans with {'%name%': profile_name} %} mail.profile_reminder.msg.add_description {% endtrans %}
                    </p>
                    <p class="p-third-line">{% trans %} mail.profile_reminder.msg.others {% endtrans %}
                    </p>
                    <p class="p-second-line">{% trans %} mail.profile_reminder.msg.to_do_that {% endtrans%}<a href="{{ absolute_url(path('profile')) }}/{{ profile_name }}" class="p-a-link" target="_blank"> {% trans %} mail.profile_reminder.msg.go_gere {% endtrans %}</a> {% trans %} mail.profile_reminder.msg.click_edit {% endtrans %}
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
