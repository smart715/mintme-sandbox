{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img alt="Login" src="{{ absolute_url(asset('build/images/mail-login.png')) }}" width="120" class="img-build-v5" />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ nickname }}</p>
                    <p class="p-second-line">{% trans %} mail.new_device.login.msg {% endtrans %}
                    </p>
                    <p class="p-second-line">{% trans %} mail.new_device.new_ip.msg {% endtrans %}
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="300" class="td-device" bgcolor="#ffffff">
                    <img alt="Device" src="{{ absolute_url(asset('build/images/mail-device.png')) }}" width="120" class="img-build-v4" />
                </td>
                <td align="center" width="300" class="td-device" bgcolor="#ffffff">
                    <p class="p-device-label">{% trans %} device_label {% endtrans %}
                    </p>
                    <p class="p-user-device-info">{{ user_device_info.deviceInfo }} ({{ user_device_info.osInfo }})
                    </p>
                    <p class="p-new-device">{% trans %} new_device.date {% endtrans %}
                    </p>
                    <p class="p-user-device-info">{{ user_device_info.date|date('Y-m-d H:i:s') }} (UTC)
                    </p>
                    <p class="p-new-device">{% trans %} new_device.ip {% endtrans %}
                    </p>
                    <p class="p-user-device-info">{{ user_device_info.ipAddress }}
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
