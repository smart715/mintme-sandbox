{% extends 'mail/layout.html.twig' %}

{% block content %}
    <table width="100%">
        <tr>
            <th>
                <h3 style="font-size: 28px; margin-bottom:0px; font-family: Helvetica, Arial, sans-serif;font-weight: normal;color: #fff;" >Hello</h3>
                <h1 style="font-size: 34px; margin-top: 0px; margin-bottom: 0px;color: #2199e8; "><strong>{{username}}</strong></h1>
            </th>
        </tr>
        <tr>
            <th>
                <p style="font-size: medium; margin-right:20px;margin-bottom:0px;margin-left:20px;font-weight: normal; color: #fff;">
                    {{ message }}
                </p>
            </th>
        </tr>
        <tr>
            <th style="height:20px;font-size:0px;line-height:20px;color: #fff;">&#xA0;</th>
        </tr>
    </table>
    <table width="100%" style="border: 1px solid silver; background: #0E3B58;">
        <tr>
            <td style="text-align-last: center; !important;" rowspan="4">
                <img width="150px" height="150px" src="{{ absolute_url(asset('build/images/new_device.png')) }}" class="align-self-center text-center" alt="new device icon"/>
            </td>
        </tr>
        <tr>
            <td>
                <span style="font-weight: bold; line-height: normal; display: inline;">Device: </span><p style="text-align: end; font-size: smaller; font-weight: normal; color: #fff;">{{ user_device_info.deviceInfo }} ({{ user_device_info.osInfo }})</p>
            </td>
        </tr>
        <tr>
            <td>
                <span style="font-weight: bold; line-height: normal; display: inline;">Date: </span><p style="text-align: end; font-size: smaller; font-weight: normal; color: #fff;">{{ user_device_info.date|date('Y-m-d H:i:s') }} (UTC)</p>
            </td>
        </tr>
        <tr>
            <td>
                <span style="font-weight: bold; line-height: normal; display: inline;">IP Address: </span><p style="text-align: end; font-size: smaller; font-weight: normal; color: #fff;">{{ user_device_info.ipAddress }}</p>
            </td>
        </tr>
    </table>
{% endblock %}
