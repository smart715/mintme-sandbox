{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="table-border"
            bgcolor="#ffffff"
        >
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img
                        alt="Verification"
                        src="{{ absolute_url(asset('build/images/mail-verification.png')) }}"
                        width="120"
                        class="img-build-v1"
                    />
                    <p class="p-hello">{% trans %} hello {% endtrans %} {{ nickName }}</p>
                    <p class="p-second-line">
                        {% trans %} email.verification_code.tittle {% endtrans %}
                    </p>
                </td>
            </tr>
        </table>
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="border-blank-space"
            bgcolor="#f3f3f3"
        >
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="table-border-v3"
            bgcolor="#2199e8"
            style="table-layout:fixed"
        >
            <tr>
                <td align="center" class="td-code" bgcolor="#2199e8">
                    <p class="p-code">{{ code }}</p>
                </td>
            </tr>
        </table>
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="border-blank-space"
            bgcolor="#f3f3f3"
        >
            <tr>
                <td align="center" class="post-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
