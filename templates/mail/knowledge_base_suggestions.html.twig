{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="table-border" bgcolor="#ffffff">
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    <img alt="Token" src="{{ absolute_url(asset('build/images/mail-token.png')) }}" width="120" class="img-build-v3" />
                    <p class="p-fiveth-line">
                        {% trans with {'%tokenName%': tokenName} %} mail.knowledge_base.header.2 {% endtrans %}
                    </p>
                    <p class="p-username">{{ tokenName }}</p>
                    <p class="p-second-line p-mail-header">
                        {% trans %} mail.knowledge_base.header.3 {% endtrans %}
                    </p>
                    <p class="p-sixth-line">
                        <ul class="ul-sixth-line">
                            <li>
                                <a href="{{ tokenSalesUrl }}" class="li-a-link" target="_blank">
                                    {% trans %} knowledge_base.link.1 {% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ aimingUrl }}" class="li-a-link" target="_blank">
                                    {% trans %} knowledge_base.link.2 {% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ ideasUrl }}" class="li-a-link" target="_blank">
                                    {% trans %} knowledge_base.link.3  {% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ stuckUrl }}" class="li-a-link" target="_blank">
                                    {% trans %} knowledge_base.link.4 {% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ talkingUrl }}" class="li-a-link" target="_blank">
                                    {% trans %} knowledge_base.link.5 {% endtrans %}
                                </a>
                            </li>
                        </ul>
                    </p>
                    <p class="p-seventh-line">
                        {% trans %} knowledge_base.header.3 {% endtrans %}
                    </p>
                    <div class="div-eighth-line">
                        <ol type="none" class="ol-eighth-line">
                            <li>
                                {% trans %} knowledge_base.header2.msg.1 {% endtrans %}
                            </li>
                            <li>
                                {% trans %} knowledge_base.header2.msg.2 {% endtrans %}
                            </li>
                        </ol>
                    </div>
                    <p class="p-nineth-line">
                        {% trans %} knowledge_base.read.txt {% endtrans %}
                        <a href="{{ deployUrl }}" class="mail-a-link" target="_blank">
                            {% trans %} knowledge_base.link.blockchain {% endtrans %}
                        </a>
                        {% trans %} knowledge_base.article.txt {% endtrans %}
                    </p>
                    <p class="what-next text-center">
                        {% trans %} knowledge_base.whatnext.txt {% endtrans %}
                    </p>
                    <p class="p-tenth-line">
                        <ol class="ol-tenth-line">
                            <li>
                                {% trans %} knowledge_base.whatnext.link2 {% endtrans %}
                            </li>
                            <li>
                                {% trans %} knowledge_base.whatnext.link3 {% endtrans %}
                            </li>
                            <li>
                                {% trans %} knowledge_base.whatnext.link4 {% endtrans %}
                            </li>
                            <li>
                                {% trans %} knowledge_base.whatnext.link5 {% endtrans %}
                            </li>
                        </ol>
                    </p>
                </td>
            </tr>
        </table>
        <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" class="border-blank-space" bgcolor="#f3f3f3">
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
