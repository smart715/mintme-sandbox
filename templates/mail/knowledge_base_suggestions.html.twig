{% extends 'mail/layout.html.twig' %}
{% block content %}
<div style="width:100%;max-width:600px;Margin:0;padding-top:0;padding-right:0;padding-bottom:0;padding-left:0;display:inline-block;vertical-align:middle;">
<table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;background-color:#ffffff;" bgcolor="#ffffff">
    <tr>
        <td align="center" width="600" style="width:100%;Margin:0;padding-top:0;padding-right:0;padding-bottom:0;padding-left:0;line-height:16px;height:16px;background-color:#ffffff;" bgcolor="#ffffff">
            <img alt="Token" src="{{ absolute_url(asset('build/images/Token.png')) }}" width="120" style="width:120px;height:auto;border:none;outline:0;text-align:center;text-decoration:none;color:#ffffff;-ms-interpolation-mode:bicubic;" />
            <p style="Margin:0 0 12px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:24px;font-weight:400;line-height:26px;color:#0a0a0a;">{% trans with {'%tokenName%': tokenName} %} mail.knowledge_base.header.2 {% endtrans %}
            </p>
            <p style="Margin:0 0 18px 0;padding:0;word-break:break-all;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:30px;font-weight:400;line-height:30px;color:#2199e8;">{{ tokenName }}
            </p>
            <p style="Margin:0 0 12px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:20px;font-weight:400;line-height:26px;color:#0a0a0a;">{% trans %} mail.knowledge_base.header.3 {% endtrans %}
            </p>
            <p style="Margin:0 0 20px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:16px;font-weight:600;line-height:8px;color:#0a0a0a;">
                <ul style="text-align:left;">
                    <li><a href="{{ tokenSalesUrl }}" style="Margin:0;padding:0;font-weight:600;color:#2199e8;text-decoration:none;" target="_blank">{% trans %} knowledge_base.link.1 {% endtrans %}</a></li>&nbsp;
                    <li><a href="{{ aimingUrl }}" style="Margin:0;padding:0;font-weight:600;color:#2199e8;text-decoration:none;" target="_blank">{% trans %} knowledge_base.link.2 {% endtrans %}</a></li>&nbsp;
                    <li><a href="{{ ideasUrl }}" style="Margin:0;padding:0;font-weight:600;color:#2199e8;text-decoration:none;" target="_blank">{% trans %} knowledge_base.link.3  {% endtrans %}</a></li>&nbsp;
                    <li><a href="{{ stuckUrl }}" style="Margin:0;padding:0;font-weight:600;color:#2199e8;text-decoration:none;" target="_blank">{% trans %} knowledge_base.link.4 {% endtrans %}</a></li>&nbsp;
                    <li><a href="{{ talkingUrl }}" style="Margin:0;padding:0;font-weight:600;color:#2199e8;text-decoration:none;" target="_blank">{% trans %} knowledge_base.link.5 {% endtrans %}</a></li>
                </ul>
            </p>
            <p style="Margin:20px 0 12px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:18px;font-weight:400;line-height:20px;color:#0a0a0a;">{% trans %} knowledge_base.header.3 {% endtrans %}
            </p>
            <p style="Margin:0 0 20px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:16px;font-weight:600;line-height:26px;color:#0a0a0a;">
                <ul type="none" style="Margin:0;padding:0;text-align:center;list-style-type:none;">
                    <li>1. <strong>{% trans %} knowledge_base.header2.msg.1 {% endtrans %}</strong></li>
                    <li>2. <strong>{% trans %} knowledge_base.header2.msg.2 {% endtrans %}</strong></li>
                </ul>
            </p>
            <p style="Margin:0 0 20px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:16px;font-weight:400;line-height:20px;color:#0a0a0a;">{% trans %} knowledge_base.read.txt {% endtrans %}<a href="{{ deployUrl }}" style="Margin:0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:16px;font-weight:600;line-height:20px;color:#2199e8;text-decoration:none;" target="_blank"> {% trans %} knowledge_base.link.blockchain {% endtrans %}</a> {% trans %} knowledge_base.article.txt {% endtrans %}
            </p>
            <p style="Margin:0 0 12px 0;padding:0;text-align:center;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:20px;font-weight:400;line-height:26px;color:#0a0a0a;">{% trans %} knowledge_base.whatnext.txt {% endtrans %}
            </p>
            <p style="Margin:0 0 20px 0;padding:0;text-align:left;vertical-align:middle;font-family:Helvetica,Arial,sans-serif;font-size:16px;font-weight:600;line-height:26px;color:#0a0a0a;">
                <ol style="text-align:left;">
                    <li><strong>{% trans %} knowlegde_base.whatnext.link2 {% endtrans %}</strong></li>&nbsp;
                    <li><strong>{% trans %} knowlegde_base.whatnext.link3 {% endtrans %}</strong></li>&nbsp;
                    <li><strong>{% trans %} knowlegde_base.whatnext.link4 {% endtrans %}</strong></li>&nbsp;
                    <li><strong>{% trans %} knowlegde_base.whatnext.link5 {% endtrans %}</strong></li>
                </ol>
            </p>
        </td>
    </tr>
</table>
<table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;background-color:#f3f3f3;" bgcolor="#f3f3f3">
    <tr>
        <td align="center" style="Margin:0;padding-top:0;padding-right:0;padding-bottom:0;padding-left:0;font-size:0;line-height:18px;height:18px;background-color:#f3f3f3;" bgcolor="#f3f3f3">&nbsp;</td>
    </tr>
</table>
</div>
{% endblock %}

