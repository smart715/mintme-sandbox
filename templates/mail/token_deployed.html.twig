{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <table class="body box-table-v2">
        <tbody>
        <tr class="tr-mintme-host">
            <td align="center" class="center td-mintme-host"
                valign="top">
                <div class="box-table">
                    <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0"
                           class="table-border" bgcolor="#ffffff">
                        <tr>
                            <td align="center" width="600"
                                class="td-body"
                                bgcolor="#ffffff">
                                <img alt="Blockchain" src="{{ absolute_url(asset('build/images/mail-blockchain.png')) }}"
                                     width="120"
                                     class="img-build-v3"/>
                                <p class="p-hello">{% trans from 'messages' %} hello {% endtrans %} {{ nickname }}</p>
                                <p class="p-eleventh-line">
                                    {% trans %}mail.token_deployed.p_1{% endtrans %}
                                </p>
                                <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td align="center" class="td-presentation">
                                            <p class="p-thirteenth-line">
                                                <a href="{{ explorerUrl }}" target="_blank">{{ explorerUrl }}</a>
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                                <p class="p-eleventh-line">
                                    {% trans %}mail.token_deployed.p_1.a{% endtrans %}
                                </p>
                                <ol class="ol-mail">
                                    <li>{% trans %}mail.token_deployed.p_1.1{% endtrans %}</li>
                                    <li>{% trans %}mail.token_deployed.p_1.2{% endtrans %}</li>
                                    <li>{% trans %}mail.token_deployed.p_1.3{% endtrans %}</li>
                                </ol>
                                <p class="p-twelfth-line">
                                    {% trans %}mail.token_deployed.p_2{% endtrans %}
                                </p>
                                <ol class="ol-mail">
                                    <li>{% trans %}mail.token_deployed.p_2.1{% endtrans %}</li>
                                    <li>{% trans %}mail.token_deployed.p_2.2{% endtrans %}</li>
                                    <li>{% trans %}mail.token_deployed.p_2.3{% endtrans %}</li>
                                </ol>
                                <p class="p-twelfth-line">
                                    {% trans %}mail.token_deployed.p_3{% endtrans %}
                                </p>
                                <p class="p-sixth-line">
                                <ul class="text-left">
                                    <li>
                                        <a href="{{ tokenSalesUrl }}"
                                           class="li-a-link"
                                           target="_blank">{% trans %}mail.token_deployed.p_3.1{% endtrans %}
                                        </a>
                                    </li>&nbsp;
                                    <li>
                                        <a href="{{ aimingUrl }}"
                                           class="li-a-link"
                                           target="_blank">{% trans %}mail.token_deployed.p_3.2{% endtrans %}
                                        </a>
                                    </li>&nbsp;
                                    <li>
                                        <a href="{{ ideasUrl }}"
                                           class="li-a-link"
                                           target="_blank">{% trans %}mail.token_deployed.p_3.3{% endtrans %}
                                        </a>
                                    </li>&nbsp;
                                    <li>
                                        <a href="{{ stuckUrl }}"
                                           class="li-a-link"
                                           target="_blank">{% trans %}mail.token_deployed.p_3.4{% endtrans %}
                                        </a>
                                    </li>&nbsp;
                                    <li>
                                        <a href="{{ talkingUrl }}"
                                           class="li-a-link"
                                           target="_blank">{% trans %}mail.token_deployed.p_3.5{% endtrans %}
                                        </a>
                                    </li>
                                </ul>
                                </p>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
