{% extends 'mail/layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="box-table">
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="table-border"
            bgcolor="#ffffff"
        >
            <tr>
                <td align="center" width="600" class="td-body" bgcolor="#ffffff">
                    {% set currencyRebranded = currency | rebranding %}
                    {% set blockchainRebranded = blockchain | rebranding %}
                    {% set nativeMoneySymbolRebranded = nativeMoneySymbol | rebranding %}

                    <p class="p-mail-info">
                        A user performed an action but there is insufficient funds in our wallets to process it.
                        Please transfer the currencies needed.
                    </p>

                    <p class="p-mail-info">
                        User: {{ username }} <br>
                        Email: {{ email }} <br>
                        Currency: {{ currencyRebranded }} <br>
                        Blockchain: {{ blockchainRebranded }} <br>
                        Action: {{ action }} <br>
                        Amount: {{ amount }} {{ currencyRebranded }} <br>
                        {% if isWMM %}
                            Note: This is Wrapped Mintme (WMM)
                        {% endif %}
                    </p>
                    <br>
                    <p class="p-mail-info">
                        Currency balance: {{ currencyBalance }} {{ currencyRebranded }} <br>
                        Currency amount needed to be transferred: {{ currencyAmount }} {{ currencyRebranded }} <br>
                    </p>
                    <br>
                    {% if isToken %}
                        <p class="p-mail-info">
                            To pay fees: (always transfer a little more) <br> 

                            Blockchain crypto balance: {{ blockchainBalance }} {{ nativeMoneySymbolRebranded }} <br>
                            Blockchain crypto needed to be transferred: {{ blockchainAmount }} {{ nativeMoneySymbolRebranded }} <br>
                        </p>
                    {% else %}
                        <p class="p-mail-info">
                            Note: The blockchain fee is included (always transfer a little more) <br>
                        </p>
                    {% endif %}
                </td>
            </tr>
        </table>
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="border-blank-space"
            bgcolor="#f3f3f3"
        >
            <tr>
                <td align="center" class="prev-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
        <table
            role="presentation"
            width="100%"
            border="0"
            cellpadding="0"
            cellspacing="0"
            class="border-blank-space"
            bgcolor="#f3f3f3"
        >
            <tr>
                <td align="center" class="post-blank-space" bgcolor="#f3f3f3">&nbsp;</td>
            </tr>
        </table>
    </div>
{% endblock %}
