{% extends 'base.html.twig' %}

{% block title %}mintMe | Profile{% endblock %}

{% block bodyclass %}profile-view{% endblock %}

{% block content %}
    <div class="container" id="profile">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <span>{{ profile.firstName }} {{ profile.lastName }} </span>

                        {%- if (canEdit == true) -%}
                            <a @click="showEditForm = true" class="float-right">
                                <font-awesome-icon icon="edit" class="c-pointer ml-2"></font-awesome-icon>
                            </a>
                        {%- endif -%}
                    </div>
                    <div class="card-body">
                        <div class="row" v-if="!showEditForm">
                            <div class="col-12 col-md-4">
                                <div class="pb-1">
                                    {% if profile.city is not empty %}
                                        City: {{ profile.city }}
                                    {% endif %}
                                </div>
                                <div class="pb-1">
                                     {% if profile.country is not empty %}
                                         Country: {{ profile.getCountryFillName() }}
                                     {% endif %}
                                </div>
                                {% if token is not empty %}
                                    <div class="pb-1">
                                        <a href="{{ path('token_show', {'name': token.getName()}) }}">{{ token.getName() }}</a>
                                        created on {{ token.getCreatedAt().format('d M Y') }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-12 col-md-8 pt-3 pt-md-0 description">
                                <div>{{ profile.description }}</div>
                            </div>
                        </div>

                        <div v-if="showEditForm" v-cloak>
                            {{ form_start(form) }}
                            <div class="row mb-3">
                                <div class="col-12 col-md-4">
                                    <div class="pb-1">
                                        {{ form_row(form.firstName) }}
                                    </div>
                                    <div class="pb-1">
                                        {{ form_row(form.lastName) }}
                                    </div>
                                    <div class="pb-1">
                                        {{ form_row(form.city) }}
                                    </div>
                                    <div class="pb-1">
                                        {{ form_row(form.country) }}
                                    </div>
                                </div>
                                <div class="col-12 col-md-8 pt-3 pt-md-0 description">
                                    <div>
                                        {{ form_row(form.description) }}
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input type="submit" class="btn btn-primary px-4" value="Save">
                                <a href="#" @click="showEditForm = false" class="ml-3" >Cancel</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    <input type="hidden" ref="editFormShowFirst" value="{{ editFormShowFirst }}"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/profile.js') }}"></script>
{% endblock %}

