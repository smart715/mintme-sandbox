{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block bodyclass %}profile-view{% endblock %}

{% block content %}
    <div class="container" id="profile">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <span>{{ lastName }} {{ firstName }} </span>
                        {%- if (canedit == true) -%}
                        <a @click="showEditForm = true" class="float-right">
                            <font-awesome-icon icon="edit" class="ml-2"></font-awesome-icon>
                        </a>
                        {%- endif -%}
                    </div>
                    <div class="card-body" v-cloak>
                        <div class="row" v-if="!showEditForm">
                            <div class="col-12 col-md-4">
                                <div class="pb-1">
                                    City: {{ city }} 
                                </div>
                                <div class="pb-1">
                                    Country: {{ country }} 
                                </div>
                                <div class="pb-1">
                                    {TokenName} created on July 2018
                                </div>

                            </div>

                            <div class="col-12 col-md-8 pt-3 pt-md-0 description">
                                <div>{{ description }}</div>

                            </div>
                        </div>
                        <div v-if="showEditForm">
                            {{ form_start(form) }}
                            <div class="row mb-3">
                                <div class="col-12 col-md-4">
                                    <div class="pb-1">
                                        {%- if (form.lastname is defined) -%}
                                            {{ form_label(form.lastname) }}
                                            {{ form_widget(form.lastname) }}
                                        {%- endif -%}
                                    </div>
                                    <div class="pb-1">
                                        {%- if (form.firstname is defined) -%}
                                            {{ form_label(form.firstname) }}
                                            {{ form_widget(form.firstname) }}
                                        {%- endif -%}
                                    </div>
                                    <div class="pb-1">
                                        {{ form_label(form.city) }}
                                        {{ form_widget(form.city) }}
                                    </div>
                                    <div class="pb-1">
                                        {{ form_label(form.country) }}
                                        {{ form_widget(form.country) }}
                                    </div>

                                </div>

                                <div class="col-12 col-md-8 pt-3 pt-md-0 description">
                                    <div>
                                        {{ form_label(form.description) }}
                                        {{ form_widget(form.description) }}
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input type="submit" class="btn btn-primary px-4" value="Save">
                                <a href="#" @click="showEditForm = false" class="ml-3" >Cancel</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/profile.js') }}"></script>
{% endblock %}

