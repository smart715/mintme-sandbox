{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('pages/register') }}
{% endblock %}

{% block title %}Sign Up Landing | mintMe{% endblock %}

{% block bgclass %}register-bg{% endblock %}

{% set formHeader = 'sign_up_now'|trans %}

{% block content %}
    <div id="sign-up-langing">
        <section class="header">
            <div class="header-background background-img d-flex justify-content-center align-items-center">
                <div class="row container justify-content-center py-7 px-4 px-sm-0">
                    <div id="form" class="col-sm-10 col-md-5 col-lg-5 col-xl-4 pr-xs-2 pr-md-0 px-5 p-sm-0 pl-lg-5">
                        <div class="bg-white form-container p-4 pb-5">
                            <div class="mt-3 mb-5 ml-3 text-dark h3">
                                {{ formHeader }}
                                <hr class="h-divider mt-2"></hr>
                            </div>
                            {{ include("@FOSUser/Registration/register_content_body.html.twig") }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-7 col-lg-7 col-xl-8 pt-5 px-md-5 pt-md-5 pt-sm-5 align-self-center">
                        <div class="p-xl-5">
                            <img class="w-100" src="{{ asset('build/images/three-coins-graphic.svg') }}">
                            <h1 class="text-center text-md-right mt-5 title-header font-weight-bold">
                                <span>
                                    {% trans %} page.landing.content.2.1 {% endtrans %}
                                </span>
                                <span class="text-primary">
                                    {% trans %} page.landing.content.2.2 {% endtrans %}
                                </span>
                            </h1>
                            <h2 class="text-center text-md-right sub-title">
                                <span>
                                    {% trans %} page.landing.content.3.1 {% endtrans %}
                                </span>
                                <span class="font-weight-bold">
                                    {% trans %} page.landing.content.3.2 {% endtrans %}
                                </span>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-white color-section-title">
            <div class="container py-7">
                <div class="text-center">
                    <h1 class="title-header">
                        {% trans %} page.landing.content.4 {% endtrans %} <i>Mint</i><i class="text-primary">Me</i>?
                    </h1>
                    <h4 class="mt-4">
                        {% trans %} page.landing.content.5 {% endtrans %}
                    </h4>
                </div>
                <div class="row container px-5 mx-0 landing-font justify-content-center text-center mt-5">
                    <div class="col-lg-4 col-md-12 p-lg-3 p-md-5 align-self-baseline">
                        <img
                            class="mw-100 img-with-description"
                            src="{{ asset('build/images/content-creator-graphic.svg') }}"
                        />
                        <div class="mt-5">
                            <span>{% trans %} page.landing.content.6 {% endtrans %}</span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 pt-5 pt-md-0 p-lg-3 p-md-5 align-self-baseline">
                        <img class="mw-100 img-with-description" src="{{ asset('build/images/supporter-graphic.svg') }}">
                        <div class="mt-5">
                            <span>{% trans %} page.landing.content.7 {% endtrans %}</span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 pt-5 pt-md-0 p-lg-3 p-md-5 align-self-baseline">
                        <img
                            class="mw-100 img-with-description"
                            src="{{ asset('build/images/tokens-value-graphic.svg') }}"
                        />
                        <div class="mt-5">
                            <span>{% trans %} page.landing.content.8 {% endtrans %}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container py-5">
                <div class="row py-3">
                    <div class="col-12 col-md-6">
                        <div class="title-header font-weight-semibold pt-md-5">
                            {% trans %} page.landing.content.9 {% endtrans %}
                        </div>
                        <div class="mt-5 mx-auto landing-font">
                            {% trans with {'%landing_web_bonus%': landing_web_bonus} %} page.landing.content.10 {% endtrans %}
                        </div>
                        <div class="mt-4 mx-auto landing-font">
                            {% trans with {'%landing_web_bonus%': landing_web_bonus} %} page.landing.content.11 {% endtrans %}
                        </div>
                        <a
                            href="#form"
                            class="text-uppercase text-center align-bottom rounded d-inline-block btn border-0 btn-register btn-register-hover-dark mt-5 py-3 px-5 font-weight-semibold"
                        >
                            {% trans %} page.index.promo.btn.register {% endtrans %}
                        </a>
                    </div>
                    <div class="col-12 col-md-6 align-self-center text-center">
                        <img class="mw-100 mt-5" src="{{ asset('build/images/idea-graphic.svg') }}">
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-white color-section-title">
            <div class="container py-5 mt-2 mb-4">
                <div class="row py-5 mt-2 mb-4">
                    <div class="col-12 col-lg-5 align-self-center text-center">
                        <img class="mw-100" src="{{ asset('build/images/mintme-coins-graphic.svg') }}">
                    </div>
                    <div class="col-12 col-lg-7 text-center text-lg-left">
                        <div class="title-header font-weight-semibold pt-5">
                            {% trans %} page.landing.content.12 {% endtrans %}
                        </div>
                        <div class="mt-5 mx-auto landing-font">
                            {% trans with {'%landing_web_bonus%': landing_web_bonus} %} page.landing.content.14 {% endtrans %}
                        </div>
                        <div class="mt-4 mx-auto landing-font">
                            {% trans with {'%landing_web_bonus%': landing_web_bonus} %} page.landing.content.15 {% endtrans %}
                        </div>
                        <div class="mt-4 mx-auto landing-font">
                            {% trans with {'%landing_web_bonus%': landing_web_bonus} %} page.landing.content.13 {% endtrans %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block bodyclass %}register{% endblock %}
{% block pagescripts %}
    {% include 'recaptcha_script.html.twig' with { recaptcha: form.recaptcha } %}
    {{ encore_entry_script_tags('pages/register') }}
{% endblock %}
