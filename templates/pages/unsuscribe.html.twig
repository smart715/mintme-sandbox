{% extends 'base.html.twig' %}

{% block title %}Unsuscribe{% endblock %}

{% block content %}
    <div class="container">
        <div class="row pt-5 justify-content-center">
            <div class="col-12">
                <div class="card card-fixed-small mx-auto">
                    <div class="card-header">
                        {{ formHeader }}
                    </div>
                    <div class="card-body py-3">
                    		{% if result is not empty %}
                    		
									<div class="row">
										<div class="col-12">
											{% if result == true %}
												<span>{{ mail }} was unsuscribed successfully.</span>
											{% else %}
												<span>Error when unsuscribing {{ mail }}. 
											{% endif %}
										</div>
									</div>                    		                                  
                    		{% else %}

								{{ form_start(form) }}
									{{ form_widget(form.mail, { value: mail }) }}
									<div class="row">									
										<div class="col-12 mb-3">
											<span>Do you want to unsuscribe to {{ mail }}?</span>
										</div>
									</div>
									<div class="row">
										<div class="col-12">
                    					<div class="float-left mr-2">{{ form_widget(form.confirm, { label: 'Yes' }) }}</div>
                    					<div class="float-left"><a href="{{ path('homepage') }}" class="btn btn-primary">No</a></div>
										</div>
									</div>
								{{ form_end(form) }}
                    		                    		
                    		{% endif %}                   								
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}