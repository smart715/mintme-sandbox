{% extends 'base.html.twig' %}

{% block title %}mintMe | Trading{% endblock %}

{% block bodyclass %}trading{% endblock %}

{% block content %}
    <div id="trading" class="container-fluid px-4 pt-5 pb-3 ">
        <div class=" px-2">
            <div class="card">
                <div class="card-header">
                    Trading
                </div>
                <div class="card-body" v-cloak>
                    {{ include("loader.html.twig") }}
                    <trading websocket-url="{{ global_websocket_url }}"
                             market-names="{{ marketNames | json_encode }}"
                             >
                        <div slot="title" class="card-title font-weight-bold pt-1 pb-1">
                            Top {{ marketNames | length }} tokens
                        </div>
                    </trading>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/trading.js') }}"></script>
{% endblock %}
