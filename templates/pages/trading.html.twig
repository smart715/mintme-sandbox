{% extends 'base.html.twig' %}

{% block title %}mintMe | Trading{% endblock %}

{% block bodyclass %}trading{% endblock %}

{% block content %}
    <div id="trading" class="container">
        <div class="row  pt-5 justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Trading
                    </div>
                    <div class="card-body p-0" v-cloak>
                        {{ include("loader.html.twig") }}
                        <trading websocket-url="{{ global_websocket_url }}"
                                 markets="{{ markets | json_encode }}">
                            <div slot="title" class="card-title font-weight-bold pl-4 pt-3 pb-1">
                                Top {{ markets | length }} tokens
                            </div>
                        </trading>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/trading.js') }}"></script>
{% endblock %}
