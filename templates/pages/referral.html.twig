{% extends 'base.html.twig' %}

{% block title %}{% trans %}page.referral.title{% endtrans %} | mintMe{% endblock %}

{% block bodyclass %}referral{% endblock %}

{% block content %}
    <div id="referral" class="container">
        <div class="row pt-4 pb-3 justify-content-center">
            <div class="col-12 card-fixed-large px-0 card">
                <div class="card-header">{% trans %}page.referral.header{% endtrans %}</div>
                <div class="card-body text-center m-0 pt-4">
                    <p class="m-0">{% trans %}page.referral.body_1{% endtrans %} <span class="text-bold">{% trans with {'%referralPercentage%': referralPercentage} %}page.referral.body_2{% endtrans %}</span> {% trans %}page.referral.body_3{% endtrans %}</p>
                    <p>{% trans with {'%deployCostReward%': deployCostReward} %}page.referral.body_4{% endtrans %}</p>
                    <p>{% trans with {'%referralPercentage%': referralPercentage} %}page.referral.body_5{% endtrans %}</p>
                    <p>{% trans %}page.referral.body_6{% endtrans %}</p>
                    <div class="mt-3 mx-auto text-center">
                        <div class="mb-1" id="referral-link-text">
                            {% if userToken %}
                            <code class="p-2 text-blue">
                                <span> {{ absolute_url(path('register-referral-by-token', { userToken: userToken })) }} </span>
                                <copy-link class="code-copy c-pointer" id="code-copy-btn" content-to-copy="{{ absolute_url(path('register-referral-by-token', { userToken: userToken })) }}">
                                    <font-awesome-icon :icon="['far', 'copy']"></font-awesome-icon>
                                </copy-link>
                            </code>
                            {% else %}
                            <code class="p-2 text-blue">
                                <span> {{ absolute_url(path('register-referral-by-code', { code: referralCode })) }} </span>
                                <copy-link class="code-copy c-pointer" id="code-copy-btn" content-to-copy="{{ absolute_url(path('register-referral-by-code', { code: referralCode })) }}">
                                    <font-awesome-icon :icon="['far', 'copy']"></font-awesome-icon>
                                </copy-link>
                            </code>
                            {% endif %}
                            <div class="clearfix"></div>
                        </div>
                        <div class="row justify-content-center text-bold mt-4">
                            <div class="col-auto p-2 mt-2">
                                {% trans %}page.referral.body_7{% endtrans %}
                                <span>
                                    <span v-if="referralBalance" v-text="balance"></span>
                                    <span v-else>
                                        <font-awesome-icon icon="circle-notch" spin class="loading-spinner" fixed-width />
                                    </span>
                                    <small>MINTME</small>
                                </span>
                            </div>
                            <div class="col-auto p-2 mt-2">
                                {% trans %}page.referral.body_8{% endtrans %}
                                <span>
                                    {{ referralsCount }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/referral.js') }}"></script>
{% endblock %}
