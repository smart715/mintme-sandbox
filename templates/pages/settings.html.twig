{% extends 'base.html.twig' %}

{% block title %}mintMe | Settings{% endblock %}

{% block messageContainer %}{% endblock %}

{% block content %}
    <div id="profile" class="container">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-lg-10 col-xl-6">
                <div class="card">
                    <div class="card-header">Account settings</div>
                    <div class="card-body m-0">
                        <div class="{% block messageClass %}{% endblock %}">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="w-100 mx-auto mb-3 alert alert-{{ label }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                        <div>
                            {{ form_start(emailForm) }}
                            {{ form_row(emailForm.email, { 'attr': {'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$'} }) }}
                            {{ form_rest(emailForm) }}
                            <button type="submit" class="btn btn-primary float-right px-5">Save</button>
                            {{ form_end(emailForm) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="mt-3">
                            {{ form_start(passwordForm) }}
                            {{ form_rest(passwordForm) }}
                            <button type="submit" class="btn btn-primary float-right px-5">Save</button>
                            {{ form_end(passwordForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-xs-12 col-lg-10 col-xl-6">
                <div class="card">
                    <div class="card-header">Two-Factor Authentication</div>
                    <div class="card-body m-0">
                        <div class="text-center">
                            <p>Increase your account's security by enabling Two-Factor Authentication (2FA).</p>
                        </div>
                        {% if twoFactorAuth %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Manage two-factor authentication
                            </a>
                        {% else %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Enable two-factor authentication
                            </a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
