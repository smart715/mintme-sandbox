{% extends 'base.html.twig' %}

{% block title %}mintMe | Settings{% endblock %}

{% block messageContainer %}{% endblock %}

{% block content %}
    <div id="settings" class="container">
        <div class="row justify-content-center pt-5">
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-header">Account settings</div>
                    <div class="card-body m-0">
                        <div class="{% block messageClass %}{% endblock %}">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="w-100 mx-auto mb-3 alert alert-{{ label }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                        <div>
                            <div v-if="$v.email.$error" class="text-danger" v-cloak>
                                <span>Email can't be empty and must be valid.</span>
                            </div>
                            {{ form_start(emailForm, {'attr': {'ref': 'emailForm'}}) }}
                            {{ form_row(emailForm.email, { 'attr': {'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$', 'required': 'required', 'ref': 'email', '@keyup': 'onEmailKeyUp', ':class': "{ 'is-invalid': $v.email.$error }"} }) }}
                            {{ form_rest(emailForm) }}
                            <button type="submit" class="btn btn-primary float-right px-5" ref="emailButton" @click.prevent="onEmailSubmit" disabled>Save</button>
                            {{ form_end(emailForm) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="mt-3">
                            {{ form_start(passwordForm) }}
                            {{ form_rest(passwordForm) }}
                            <button type="submit" class="btn btn-primary">Save</button>
                            {{ form_end(passwordForm) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-2 pt-md-0">
                <div class="card card-featured">
                    <div class="card-header">Two-Factor Authentication</div>
                    <div class="card-body m-0">
                        <div class="text-center">
                            <p>Increase your account's security by enabling Two-Factor Authentication (2FA).</p>
                        </div>
                        {% if twoFactorAuth %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Manage two-factor authentication
                            </a>
                        {% else %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Enable two-factor authentication
                            </a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pagescripts %}
    <script src="{{ asset('build/settings.js') }}"></script>
{% endblock %}