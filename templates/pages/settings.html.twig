{% extends 'base.html.twig' %}

{% block title %}Settings | mintMe{% endblock %}

{% block content %}
    <div id="settings" class="container">
        <div class="row pt-5 justify-content-center">
            <div class="card-two-divs-fixed-large pl-xl-0 col-md-6">
                <div class="card">
                    <div class="card-header">Account settings</div>
                    <div class="card-body m-0">
                        <div id="settings">
                        {% if twoFactorAuth %}
                            {{ form_start(passwordForm, {'attr': {'v-on:submit.prevent': 'submit2FA'}} ) }}
                            <two-factor-modal
                                :visible=twoFaVisible
                                :twofa=true
                                @close="twoFaVisible = false"
                                @verify="doChangePassword"
                            >
                            </two-factor-modal>
                        {% else %}
                            {{ form_start(passwordForm) }}
                        {% endif %}
                            <label for="app_user_change_password_current_password" class="d-block label-featured">Current Password:</label>
                            <template v-if="showErrorMessage">
                                <div class="p-2 mb-2 bg-danger text-center text-white">The entered password is invalid.</div>
                            </template>
                            {{ form_row(passwordForm.current_password, {'attr': {'autocomplete': 'off', 'v-model': 'currentPassword'}}) }}
                            <passwordmeter :password="password" @toggle-error="toggleError">
                                <span @click="togglePassword()" class="show-password">
                                    <i class="far fa-eye"></i>
                                </span>
                                {{ form_row(passwordForm.plainPassword, {'attr': {'v-model': 'password'}}) }}
                                <div class="pwdmeter" v-if="false"><meter max="5" value="0"></meter></div>
                            </passwordmeter>
                            <button type="submit" :disabled="disabled" class="btn btn-primary">Save</button>
                            {{ form_end(passwordForm) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-two-divs-fixed-large pr-xl-0 pr-lg-3 col-md-6 pt-2 pt-md-0">
                <div class="card card-featured">
                    <div class="card-header">Two-Factor Authentication</div>
                    <div class="card-body m-0">
                        <div class="text-center">
                            <p>Increase your account's security by enabling Two-Factor Authentication (2FA).</p>
                        </div>
                        {% if twoFactorAuth %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Manage two-factor authentication
                            </a>
                        {% else %}
                            <a href="{{ path('two_factor_auth') }}" class="btn btn-primary btn-block" role="button">
                                Enable two-factor authentication
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="card-fixed-large m-3 pl-0">
                <div class="card">
                    <div class="card-header text-uppercase">API</div>
                    <div class="card-body m-0 pt-4">
                        <div class="text-center">
                            <div v-cloak>
                                {{ include("loader.html.twig", {vCloak: 'v-cloak--block'}) }}
                                <api-keys class="mb-2" :api-keys="{{ keys | json_encode }}" v-cloak></api-keys>
                            </div>
                            <p>
                                Check <a href="{{ path('nelmio_api_doc.swagger_ui') }}">documentation</a> for more information
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-fixed-large ml-3 mr-3 pl-0">
                <div class="card">
                    <div class="card-header">Clients for OAuth access to API</div>
                    <div class="card-body m-0 pt-4">
                        <div class="text-center">
                            <div v-cloak>
                                {{ include("loader.html.twig", {vCloak: 'v-cloak--block'}) }}
                                <api-clients class="mb-2" :api-clients="{{ clients | json_encode }}" v-cloak></api-clients>
                            </div>
                            <p>
                                Check <a href="{{ path('nelmio_api_doc.swagger_ui') }}">documentation</a> for more information
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pagescripts %}
    <script nonce="{{ csp_nonce('script') }}" src="{{ asset('build/settings.js') }}"></script>
{% endblock %}
