{% extends 'base.html.twig' %}

{% set metaTitle = article.title ~ ' | mintMe' %}

{% block title %}{{ article.title }} | mintMe{% endblock %}

{% block metaDescription %}
    <meta property="og:description" content="{{ metaDescription }}">
    <meta name="description" content="{{ metaDescription }}">
{% endblock %}

{% block content %}
    <div id="kb_show" class="container mt-5">
        <div class="row justify-content-center">
            <div class="article col-md-9 card-fixed-large p-3">
                <header>
                    <h1 class="word-break">
                        {{ article|translateArticle('title') }}
                    </h1>
                </header>
                <div class="pt-2 pb-4 text-break">
                    {{ article|translateArticle('description')|raw }}
                </div>
                <div id="back-btn">
                    <a href="{{ path('homepage') }}">MintMe</a>
                    &gt;
                    <a href="{{ path('kb') }}">{% trans %}page.kb.help{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
