{% extends 'base.html.twig' %}

{% block title %}mintMe | Profile{% endblock %}

{% block bodyclass %}profile-view{% endblock %}

{% block content %}
    <div id="profile-creation" class="container">
        <div class="row  pt-5 justify-content-center">
            <div class="col-12 col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Create your profile
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center pb-3">
                            <div class="col-12">
                                {{ form_start(form) }}
                                {{ form_row(form.firstName, {'attr': {'v-model': '$v.firstName.$model','class' : 'form-control'}}) }}
                                <div v-cloak="$v.firstName" v-if="!$v.firstName.helpers" class="text-danger text-center">
                                    First name can contain only letters, ` and -
                                </div>
                                <div v-cloak="$v.firstName" v-if="!$v.firstName.minLength" class="text-danger text-center">
                                    First name must have at least 2 letters
                                </div>
                                {{ form_row(form.lastName, {'attr': {'v-model': '$v.lastName.$model','class' : 'form-control'}}) }}
                                <div v-cloak="$v.lastName" v-if="!$v.lastName.helpers" class="text-danger text-center">
                                    Last name can contain only letters, ` and -
                                </div>
                                <div v-cloak="$v.lastName" v-if="!$v.lastName.minLength" class="text-danger text-center">
                                    Last name must have at least 2 letters
                                </div>
                                <div class="text-left pt-3">
                                    <input type="submit" :disabled="$v.$anyError || !(firstName && lastName)" class="btn btn-primary px-4" value="Save">
                                    <a href="{{ path('trading') }}" class="ml-3" >Cancel</a>
                                </div>
                                {{ form_end(form) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/profile_creation.js') }}"></script>
{% endblock %}
