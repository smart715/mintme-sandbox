{% extends 'base.html.twig' %}

{% block title %}{% trans %}page.token_creation.title{% endtrans %} | mintMe{% endblock %}

{% block content %}
    <div class="container" id="token">
        <div class="row pt-4 justify-content-center">
            <div class="col-12">
                <div class="card card-fixed-small mx-auto">
                    <div class="card-header">
                        {{ formHeader }}
                    </div>
                    <div class="card-body py-2">
                        {{ form_start(form) }}
                        {% if not form.vars.valid %}
                            {% for error in form.vars.errors %}
                                {% if not (error.cause.id is defined and 'token_create' is same as(error.cause.id)) %}
                                    <div class="py-2 mb-2 bg-danger text-white text-center">{{ error.message }}</div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <div class="form-group">
                            <div class="row">
                                <div class="col-12">
                                    {{ form_errors(form) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-left">
                                    <div class="clearfix">
                                        <div class="float-left">
                                            {{ form_label(form.name, null, {'label_attr': {'class': 'mb-1'}}) }}
                                        </div>
                                        <div class="float-right">
                                            <div
                                                v-cloak="$v.tokenName"
                                                v-if="tokenNameExists"
                                                class="alert alert-danger alert-token-name-exists"
                                            >
                                                <font-awesome-icon icon="exclamation-circle"></font-awesome-icon>
                                                {% trans %}page.token_creation.error.taken{% endtrans %}
                                            </div>
                                        </div>
                                        <div class="float-right">
                                            <div
                                                v-cloak="$v.tokenName"
                                                v-if="tokenNameInBlacklist"
                                                class="alert alert-danger alert-token-name-exists"
                                            >
                                                <font-awesome-icon icon="exclamation-circle"></font-awesome-icon>
                                                {% trans %}page.token_creation.error.forbidden{% endtrans %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col py-2">
                                    {{ form_widget(form.name, {'attr': {
                                        'v-model': '$v.tokenName.$model',
                                        'class': 'form-control'
                                    }}) }}
                                </div>
                                <div class="col-12">
                                    <div v-cloak="$v.tokenName" v-if="!$v.tokenName.validChars" class="text-danger text-center">
                                        {% trans %}page.token_creation.error.contain{% endtrans %}
                                    </div>
                                    <div v-cloak="$v.tokenName" v-if="tokenName.length > 0 && (!$v.tokenName.validFirstChars || !$v.tokenName.validLastChars || !$v.tokenName.noSpaceBetweenDashes)" class="text-danger text-center">
                                        {% trans %}page.token_creation.error.space{% endtrans %}
                                    </div>
                                    <div v-cloak="$v.tokenName" v-if="!$v.tokenName.minLength" class="text-danger text-center">
                                        {% trans %}page.token_creation.error.min{% endtrans %}
                                    </div>
                                    <div v-cloak="$v.tokenName" v-if="!$v.tokenName.maxLength" class="text-danger text-center">
                                        {% trans %}page.token_creation.error.max{% endtrans %}
                                    </div>
                                    <div v-cloak="$v.tokenName" v-if="!$v.tokenName.hasNotBlockedWords" class="text-danger text-center">
                                        {% trans %}page.token_creation.error.blocked{% endtrans %}
                                    </div>
                                </div>
                                <div class="col-12 text-left">
                                    <div class="clearfix">
                                        <div class="float-left">
                                            {{ form_label(form.description, null, {'label_attr': {'class': 'mb-1'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="description">
                                        {{ form_widget(form.description, {'attr': {
                                            'v-model': '$v.description.$model',
                                            'ref': 'description'
                                        }}) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div
                                        v-cloak="$v.description"
                                        v-if="!$v.description.maxLength"
                                        class="text-danger text-center"
                                    >
                                        ${ $t('token.intro.description.max_length', translationsContext) }
                                    </div>
                                </div>
                                <div class="col-12">
                                    {{ form_widget(form.initial_orders, {
                                        'attr': {
                                            'class': 'align-middle'
                                        }
                                    })}}
                                    {{ form_label(form.initial_orders, null, {'label_attr': {'class': 'pl-1 pb-0'}}) }}
                                    <guide>
                                        <template slot="body">
                                            {% trans %}form.token.initial_order.guide{% endtrans %}
                                        </template>
                                    </guide>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <div class="col-md-12 text-left">
                                <input
                                    type="submit"
                                    class="btn btn-primary submit-creation"
                                    :class="{'input-disabled': !tokenCreation}"
                                    :disabled="saveBtnDisabled"
                                    @click="createToken"
                                    value="{% trans %}page.token_creation.create{% endtrans %}"
                                />
                                <input
                                    type="reset"
                                    class="btn btn-cancel ml-3"
                                    style="text-transform: capitalize;"
                                    @click="historyBack"
                                    value="{% trans %}cancel{% endtrans %}"
                                />
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('build/token_creation.js') }}"></script>
{% endblock %}
