{% extends 'base.html.twig' %}

{% block title %}mintMe | Token Creation{% endblock %}

{% block content %}
    <div class="container">
        <div class="row pt-5 pb-3 justify-content-center">
            <div class="col-md-8">
                <div class="card card-featured">
                    <div class="card-header">
                        {{ formHeader }}
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <div class="form-group row">
                            <div class="col-md-12 text-center">
                                <input type="submit" class="btn btn-primary" value="Create Token" />
                                <span class="px-3">or</span>
                                <a href="{{ path('trading') }}">Cancel</a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-alert {{ profileCreated ? '' : 'show' }}" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body text-center pt-5">
                    <p>You need to create profile, only then you will be able to create token</p>
                    <a href="{{ path('profile') }}" class="btn btn-primary">OK</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}