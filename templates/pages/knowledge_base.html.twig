{% extends 'base.html.twig' %}

{% block title %}Knowledge Base | mintMe{% endblock %}

{% block content %}
    <div id="kb" class="container">
        {% if knowledgeBases is empty %}
            <div class="h-100 pt-5">
                <div class="row">
                    <div class="col-12 error-text py-5 text-center text-white text-uppercase error-big-text">
                        <h1>No articles found</h1>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="row pt-5 pb-3 justify-content-center">
            {% for category in knowledgeBases %}
                <div class="col-xs-12 col-lg-9 px-3 pb-3 card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            {% if category|first is iterable %}
                                {{ category|first|first.category.name }}
                            {% else %}
                                {{ category|first.category.name }}
                            {% endif %}
                        </h4>
                    </div>
                    <div class="card-body pt-0">
                        {% for subcategory in category %}
                            <ul class="list-group">
                                {% if subcategory is not iterable %}
                                    <li class="img-fluid list-group-item border-0 pt-2 pb-0">
                                        <span class="text-danger">
                                            <a href="{{ path('kb_show', {'url': subcategory.url}) }}"
                                               class="text-light">
                                                {{ subcategory.title }}
                                            </a>
                                        </span>
                                    </li>
                                {% else %}
                                    <h6 class="pb-0 pt-2 pl-2 text-info">{{ subcategory|first.subcategory.name }}</h6>
                                    {% for kb in subcategory %}
                                        <li class="list-group-item border-0 pt-0 pb-1">
                                            <span class="text-danger">
                                                <a href="{{ path('kb_show', {'url': kb.url}) }}" class="text-light">
                                                    {{ kb.title }}
                                                </a>
                                            </span>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
