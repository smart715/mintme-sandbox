{% extends 'base.html.twig' %}

{% block title %}Knowledge Base | mintMe{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="list-group">
                    {% for kb in articles %}
                        <li class="list-group-item">
                            <span class="text-danger">
                                <a href="{{ path('kb_show', {'url': kb.shortUrl}) }}">{{ kb.title}}</a>
                            </span>
                        </li>
                    {% endfor %}
                </ul>

            </div>
        </div>
    </div>
{% endblock %}
