{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn {
            border-radius: 0;
        }
        .btn-primary {
            background-color: #448aff;
            border-color: transparent;
        }
        .main-header>.logo {
            background-color: #f9f9f9;
        }
        .main-header .navbar {
            background-color: #f9f9f9;
            border-bottom: 1px solid #e2e2e2;
        }
        .content-wrapper {
            background-color: #f9f9f9;
        }
        .logo img {
            max-width: 100%;
            height: 100%;
        }
        .main-sidebar {
            background-color: #ececec !important;
        }
        .skin-black .sidebar a {
            color: #1a1a1a;
        }
        .skin-black .sidebar-menu>li:hover>a {
            background-color: #448aff;
        }
        .skin-black .treeview-menu>li>a:hover {
            color: #448aff;
        }
        .main-sidebar .sidebar-menu>li.active>a {
            color: #1a1a1a;
            background: none;
            border-left-color: #448aff;
        }
        .main-sidebar .sidebar-menu>li>.treeview-menu {
            background: none;
        }
        .main-sidebar .treeview-menu>li>a {
            color: #1a1a1a;
        }
        .main-sidebar .treeview-menu>li.active>a {
            color: #448aff;
        }
        .content-header .navbar-default {
            background-color: #ececec;
            border: none;
            border-radius: 0;
        }
        .box {
            border-radius: 0;
            box-shadow: none;
            border: 1px solid #e6e6e6;
            border-top-color: #e6e6e6 !important;
            border-bottom: 1em solid #e6e6e6;
        }
        .box-header {
            color: #fff;
            background-color: #448aff;
        }
        .modal .modal-content {
            border-radius: 0;
            border-bottom: 1em solid #e6e6e6;
        }
        .modal .modal-header {
            border-bottom: none;
            border-radius: 0;
            background: #448aff;
        }
        .modal .modal-header .modal-title {
              color: #fff;
              line-height: 1;
        }

        @media screen and (max-width: 767px) {
            .skin-black .main-header > .logo {
                background-color: #ffffff;
            }
            .skin-black .main-header > .logo:hover {
                background-color: #ffffff;
            }
            .skin-black .main-header .navbar>.sidebar-toggle {
                border-right: none;
            }
        }

        .mosaic-metadata .meta {
            padding-top: .5rem;
            text-align: center;
        }
        .mosaic-metadata .action {
            padding-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block logo %}
    {% spaceless %}
        <a class="logo" href="{{ path('sonata_admin_dashboard') }}">
            <img src="{{ asset('build/images/main-logo.png') }}" alt="imp-logo">
        </a>
    {% endspaceless %}
{% endblock %}

{% block sonata_sidebar_search %}
{% endblock sonata_sidebar_search %}

{% block side_bar_after_nav %}
{% endblock %}

{% block sonata_page_content %}
    <div class="container" id="admin">
        {{ parent() }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/admin.js') }}"></script>
    <script src="{{ asset('build/jquery-password.js') }}"></script>

{% endblock %}