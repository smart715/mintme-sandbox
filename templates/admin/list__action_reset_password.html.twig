<button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#modal-reset-password-{{ object.id }}">
    <i class="fa fa-undo" aria-hidden="true"></i>
    Reset Password
</button>

<div class="modal fade" tabindex="-1" role="dialog" id="modal-reset-password-{{ object.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Confirm Action</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <p class="modal-message">Send User "{{ object.email }}" an email with Reset Password instructions.</p>
                    </div>
                    <div class="col-xs-12 text-center">
                        <button class="btn btn-default" data-toggle="modal" data-target="#modal-reset-password-{{ object.id }}">Cancel</button>
                        <a href="{{ admin.generateObjectUrl('reset_password', object) }}" class="btn btn-primary">Reset Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% block stylesheets %}
    <style nonce="{{ csp_nonce('style') }}">
        .modal-message {
            white-space: pre-line;
        }
    </style>
{% endblock %}
