<div class="container">
    <div class="row py-3 justify-content-center">
        <div class="col-md-8 {% if featured is not defined or featured != true %}col-xs-12 col-lg-10 col-xl-6{% endif %}">
            <div class="card {% if featured is defined and featured == true %}card-featured{% endif %}">
                <div class="card-header">
                    {{ formHeader }}
                </div>
                <div class="card-body">
                    {% block formBody %}
                        {{ form(form) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>