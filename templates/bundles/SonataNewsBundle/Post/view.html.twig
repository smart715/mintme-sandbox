{% extends 'base.html.twig' %}

{% if post.image is not null %}
    {% set metaImage %}{% path post.image, 'reference' %}{% endset %}
{% endif %}
{% set metaTitle = post.title ~ ' | mintMe' %}
{% set metaImageAlt = post.title %}

{% block title %}
{% spaceless %}
    {{ post.title }} | mintMe
{% endspaceless %}
{% endblock %}

{% block metaDescription %}
    <meta property="og:description" content="{{ post.abstract }}">
    <meta name="description" content="{{ post.abstract }}">
{% endblock %}

{% block contentClass %}blog{% endblock %}

{% block content %}
    <div id="news" class="py-4">
        {{ include("@SonataNews/Post/view_content.html.twig") }}
    </div>
{% endblock %}

{% block pagescripts %}
    {{ encore_entry_script_tags('news') }}
{% endblock %}
