{% trans_default_domain 'FOSUserBundle' %}
{% extends 'form.html.twig' %}

{% set formHeader = "Change Password" %}
{% set featured = true %}

{% block formBody %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form-group row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12 col-lg-2 text-left text-lg-right">
                        <label for="inputEmail" class="d-block label-featured">Email</label>
                    </div>
                    <div class="col">
                        <input type="email" name="username" required="required" id="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" class="form-control form-control-md" autofocus>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row pt-4">
            <div class="col-md-12 text-center">
                <input type="submit" class="btn btn-primary" value="Change password" />
            </div>
        </div>
    </form>
{% endblock %}