{% trans_default_domain 'FOSUserBundle' %}
{% extends 'form.html.twig' %}

{% set formHeader = "resetting.header"|trans %}
{% block formBody %}
    {{ form_start(resettingForm, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset', 'id': 'reset' } }) }}
        <div>
            <passwordmeter :password="password" @toggle-error="toggleError">
                <span @click="togglePassword()" class="show-password">
                    <font-awesome-icon icon="eye"></font-awesome-icon>
                </span>
                {{ form_row(resettingForm.plainPassword, {'attr': {'v-model': 'password'}}) }}
            </passwordmeter>
        </div>
        <div class="form-group text-center">
            <input type="submit" :disabled="disabled" class="btn btn-primary" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    {{ form_end(resettingForm) }}
{% endblock %}
