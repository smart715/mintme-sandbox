{% trans_default_domain 'FOSUserBundle' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'registration.email.subject'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl}) }}
    {%- endautoescape -%}
{% endblock %}

{% block body_text %}
 {% embed('mail/layout.txt.twig') %}
    {% block content %}
      {% trans from 'messages' %}hello{% endtrans %}
      {{user.userName}}
      {% trans from 'messages' %}welcome{% endtrans %}
      {% trans from 'FOSUserBundle' %}email.register.complete{% endtrans %}
      {{confirmationUrl}}
    {% endblock %}
 {% endembed %}
{% endblock %}

{% block body_html %}
  {% embed 'mail/layout.html.twig' %}
    {% block content %}
      <table width="100%">
        <tr>
          <th>
            <h3 class="text-dark-white" style="font-size: 28px; margin-bottom:0px; font-family: Helvetica, Arial, sans-serif;font-weight: normal;" >{% trans from 'messages' %}hello{% endtrans %}</h3>
            <h1 class="text-blue" style="font-size: 34px; margin-top: 0px; margin-bottom: 0px;"><strong>{{user.userName}}</strong></h1>
            <h3 class="text-dark-white" style="font-size: 28px; margin-top: 0px; font-family: Helvetica, Arial, sans-serif;font-weight: normal;">{% trans from 'messages' %}welcome{% endtrans %}</h3>
          </th>
        </tr>
        <tr>
          <th>
            <p class="text-dark-white" style="margin-right:20px;margin-bottom:0px;margin-left:20px;font-weight: normal;">{% trans from 'FOSUserBundle' %}email.register.complete{% endtrans %}</p>
          </th>
        </tr>
        <tr>
          <th>
            <p class="bg-secondary" style="padding:5px;margin-right:20px;margin-bottom:20px;margin-left:20px;font-weight: normal; " ><a href="{{confirmationUrl}}" target=_blank>{{confirmationUrl}}</a></p>
          </th>
        </tr>
        <tr>
          <th class="text-dark-white" style="height:20px;font-size:0px;line-height:20px;">&#xA0;</th>
        </tr>
      </table>
    {% endblock %}
  {% endembed %}
{% endblock %}
