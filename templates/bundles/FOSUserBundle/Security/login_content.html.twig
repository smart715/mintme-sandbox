{% trans_default_domain 'FOSUserBundle' %}
{% extends 'form.html.twig' %}

{% set formHeader = "LOGIN" %}
{% set featured = true %}

{% block formBody %}
    <form action="{{ path("login") }}" method="post">
        {% if error %}
            <div class="row">
                <div class="col-12 col-lg-4">
                </div>
                <div class="col">
                    <div class="p-2 mb-2 bg-danger text-center text-white">Invalid credentials.</div>
                </div>
            </div>
        {% endif %}
        <div class="form-group row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12 col-lg-4 text-left text-lg-right">
                        <label for="inputEmail" class="d-block label-featured">Email</label>
                    </div>
                    <div class="col">
                        <input type="email" name="_username"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" value ="{{ last_username }}" required="required" id="inputEmail" class="form-control" autofocus>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12 col-lg-4 text-left text-lg-right">
                        <label for="inputPassword" class="d-block label-featured">Password</label>
                    </div>
                    <div class="col">
                        <input type="password" name="_password" required="required" id="inputPassword" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row my-1 mb-3">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12 col-lg-4 text-left text-lg-right"></div>
                    <div class="col">
                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" class="custom-control-input">
                            <label class="custom-control-label" for="remember_me">Remember me</label>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12 col-lg-4 text-left text-lg-right"></div>
                    <div class="col">
                        {% if form_errors(form)|length > 0 %}
                            <div class="bg-danger text-white">{{ form_errors(form) }}</div>
                        {% endif %}
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12 text-center">
                <input type="submit" id="_submit" name="_submit" class="btn btn-primary rounded-0 px-4" value="Log In">
                <span class="px-2">or</span>
                <a class="link-light" href="{{ path('fos_user_registration_register') }}">Sign Up</a>
            </div>
        </div>
        <div class="text-center text-white">
            <a class="link-light" href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>
        </div>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
    </form>
{% endblock %}
