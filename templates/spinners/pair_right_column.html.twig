<div v-if="false">
    <div class="card card-yellow h-100">
        <div class="d-flex align-items-center justify-content-center qt-card-spinner">
            <div class="spinner-border spinner-border-sm my-1" role="status"></div>
        </div>
    </div>
    <div class="card p-3 mt-4">
        <div class="font-size-3 font-weight-semibold header-highlighting">
            {{ 'page.pair.overview_chart_title'|trans|raw }}
        </div>
        <div class="d-flex align-items-center justify-content-center chart-spinner">
            <div class="spinner-border spinner-border-sm my-1" role="status"></div>
        </div>
    </div>
    <div class="card p-3 mt-4">
        <div class="font-size-3 font-weight-semibold header-highlighting">
            {{ 'trade.top_holders.header'|trans|raw }}
        </div>
        <table class="table b-table">
            <thead>
            <tr>
                <th class="pl-3">
                    {% trans %}trade.top_holders.trader{% endtrans %}
                </th>
                <th class="pr-3 text-right">
                    {% trans %}trade.top_holders.amount{% endtrans %}
                </th>
            </tr>
            </thead>
            <tbody>
                {% for holder in topHolders %}
                <tr>
                    <td class="pl-3">
                        <div class="d-flex flex-row flex-nowrap justify-content-between w-100">
                            <img
                                src="{{ holder.user.profile.image.avatar_small }}"
                                alt="avatar" class="d-block rounded-circle"
                            />
                            <a
                                href="{{ path('profile', {nickname: holder.user.profile.nickname}) }}"
                                class="elastic-text mr-1 ml-2 text-white"
                            >
                                <div class="overflow-hidden">
                                    <span>
                                        {{ holder.user.profile.nickname | u.truncate(12) }}
                                    </span>
                                </div>
                            </a>
                        </div>
                    </td>
                    <td class="pr-3 text-right">
                        {{ holder.balance | toMoney(0) }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if rewards_enabled %}
        <div class="card p-3 mt-4">
            <div class="font-size-3 font-weight-semibold header-highlighting">
                {{ 'token.bounties.header'|trans|raw }}
            </div>
            <div class="d-flex align-items-center justify-content-center p-3">
                <div class="spinner-border spinner-border-sm my-1" role="status"></div>
            </div>
        </div>
        <div class="card p-3 mt-4">
            <div class="font-size-3 font-weight-semibold header-highlighting">
                {{ 'token.rewards.header'|trans|raw }}
            </div>
            <div class="d-flex align-items-center justify-content-center p-3">
                <div class="spinner-border spinner-border-sm my-1" role="status"></div>
            </div>
        </div>
    {% endif %}
</div>
