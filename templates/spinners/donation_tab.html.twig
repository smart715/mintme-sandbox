{% if is_granted('trading') %}
<div class="container-fluid px-0">
    <div class="container-fluid px-0">
        <div class="row justify-content-center">
            <div class="width-100 col-9 col-sm-10 col-md-9 col-lg-7 col-xl-6 mt-3">
                <div class="card h-100">
                    <div class="h-100 donation">
                        <div class="donation-header text-left">
                            <span>
                                {% trans %}donation.header.logged{% endtrans %}
                            </span>
                        </div>
                        <div class="card-body donation-body">
                            {% if loggedIn is same as('true') %}
                                <div class="h-100">
                                    <div>
                                        <div>
                                            <p class="info">
                                                {% trans with {'%path%': path('token_show', {name: token.name, tab: 'trade'})} %}
                                                    donation.nonrefund
                                                {% endtrans %}
                                            </p>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <p class="mb-2">
                                                    {% trans %}donation.currency{% endtrans %}
                                                </p>
                                                <div id="donation_currency" class="dropdown btn-group b-dropdown">
                                                    <button type="button" class="btn dropdown-toggle btn-primary">
                                                        {% trans %}donation.currency.select{% endtrans %}
                                                    </button>
                                                    <ul role="menu" tabindex="-1" class="dropdown-menu">
                                                        <li role="presentation">
                                                            <a
                                                                value="{% trans %}mintme{% endtrans %}"
                                                                role="menuitem"
                                                                target="_self"
                                                                href="#"
                                                                class="dropdown-item"
                                                            >
                                                                {% trans %}mintme{% endtrans %}
                                                            </a>
                                                        </li>
                                                        <li role="presentation">
                                                            <a
                                                                value="{% trans %}btc{% endtrans %}"
                                                                role="menuitem"
                                                                target="_self"
                                                                href="#"
                                                                class="dropdown-item"
                                                            >
                                                                {% trans %}btc{% endtrans %}
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div>
                                    <div class="p-5 text-center">
                                        <svg
                                            width="18"
                                            height="15"
                                            aria-hidden="true"
                                            focusable="false"
                                            data-prefix="fas"
                                            data-icon="circle-notch"
                                            role="img"
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 512 512"
                                            class="loading-spinner svg-inline--fa fa-circle-notch fa-w-16 fa-spin fa-fw"
                                        >
                                            <path
                                                fill="currentColor"
                                                d="M288 39.056v16.659c0 10.804 7.281 20.159 17.686 23.066C383.204 100.434 440 171.518 440 256c0 101.689-82.295 184-184 184-101.689 0-184-82.295-184-184 0-84.47 56.786-155.564 134.312-177.219C216.719 75.874 224 66.517 224 55.712V39.064c0-15.709-14.834-27.153-30.046-23.234C86.603 43.482 7.394 141.206 8.003 257.332c.72 137.052 111.477 246.956 248.531 246.667C393.255 503.711 504 392.788 504 256c0-115.633-79.14-212.779-186.211-240.236C302.678 11.889 288 23.456 288 39.056z"
                                            ></path>
                                        </svg>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% else %}
<div class="h1 text-center pt-5 mt-5">
    {% trans %}trade.page.disabled{% endtrans %}
</div>
{% endif %}
