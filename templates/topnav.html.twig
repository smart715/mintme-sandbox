{% set show_links = app.user and not is_granted('IS_AUTHENTICATED_2FA_IN_PROGRESS') %}
{% set route = app.request.get('_route') %}
<nav class="navbar navbar-expand-lg top-navbar pt-3" id="navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('homepage') }}">
            {% if is_beta_version %}
                <div class="badge">BETA</div>
            {% endif %}
            <img 
                {% if is_beta_version %} class="ml-3 ml-lg-0" {% endif %}
                src="{{ asset('build/images/logo.png') }}" 
                alt="mintMe" 
            >
        </a>
        <button
            class="navbar-toggler mt-2"
            :class="{ 'collapsed': !showNavbarMenu }"
            type="button"
            :aria-expanded="showNavbarMenu"
            aria-label="Toggle navigation"
            @click="toggleNavbarMenu"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" :class="{ 'show': showNavbarMenu }">
            <ul class="navbar-nav ml-auto">
                {% if prelaunch.isFinished() %}
                    <li class="search nav-item align-self-center py-3 py-lg-0 pr-0 pr-lg-3" v-cloak>
                        <token-searcher
                            class="justify-content-center pr-0 v-cloak--hidden"
                            search-url="{{ path('token_search') }}"
                        ></token-searcher>
                        <div class="input-group v-cloak--inline">
                            <input
                                class="search-input form-control pr-3 no-bg-img"
                                placeholder="Search for the token"
                                type="text"
                            >
                            <div class="input-group-append">
                                <span class="input-group-text text-white pl-2">
                                    <span class="fas fa-search c-pointer"></span>
                                </span>
                            </div>
                        </div>
                    </li>
                    {% if show_links %}
                        <li class="nav-item menu-token align-self-center {{ route == 'token' ? 'active' : '' }}">
                            <a href="{{ path('token_create') }}" class="nav-link">
                                <span class="icon-token float-left mt-1 mr-1 d-none d-lg-inline"></span>
                                <span>My Token</span>
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item align-self-center {{ route == 'trading' ? 'active' : '' }}">
                        <a href="{{ path('trading') }}" class="nav-link">Trading</a>
                    </li>
                    {% if show_links %}
                        <li class="nav-item align-self-center {{ route == 'wallet' ? 'active' : '' }}">
                            <a href="{{ path('wallet') }}" class="nav-link">Wallet</a>
                        </li>
                    {% endif %}
                    <li class="nav-item align-self-center {{ route starts with 'sonata_news' ? 'active' : '' }}">
                        <a href="{{ path('sonata_news_archive') }}" class="nav-link">News</a>
                    </li>
                {% endif %}
                {% if show_links %}
                    <li class="nav-item align-self-center {{ route == 'referral' ? 'active' : '' }}">
                        <a href="{{ path('referral-program') }}" class="nav-link">Referrals</a>
                    </li>
                {% endif %}
                <li class="nav-item align-self-center {{ route == 'kb' ? 'active' : '' }}">
                    <a href="{{ path('kb') }}" class="nav-link">Help</a>
                </li>
                {% if not app.user %}
                    <li class="nav-item align-self-center {{ route == 'fos_user_security_login' ? 'active' : '' }}">
                        <a href="{{ path('fos_user_security_login') }}" class="nav-link">Log In</a>
                    </li>
                    <li class="nav-item align-self-center {{ route == 'fos_user_registration_register' ? 'active' : '' }}">
                        <a href="{{ path('fos_user_registration_register') }}" class="nav-link">
                            <span>Sign Up</span>
                        </a>
                    </li>
                {% else %}
                    {% if show_links %}
                        <div class="d-lg-none align-self-center">
                            {% if prelaunch.isFinished() %}
                                <li class="text-center {{ route == 'profile' ? 'active' : '' }}">
                                    <a
                                        href="{{ path('profile') }}/{%- if (app.user.profile.pageurl is defined) -%}{{ app.user.profile.pageurl }}{%- endif -%}"
                                        class="nav-link"
                                    >
                                        <span>Profile</span>
                                    </a>
                                </li>
                            {% endif %}
                            <li class="text-center {{ route == 'settings' ? 'active' : '' }}">
                                <a href="{{ path('settings') }}" class="nav-link">
                                    <span>Settings</span>
                                </a>
                            </li>
                            <li class="text-center {{ route == 'fos_user_security_logout' ? 'active' : '' }}">
                                <a href="{{ path('fos_user_security_logout') }}" class="nav-link">
                                    <span>Log Out</span>
                                </a>
                            </li>
                        </div>
                        <li class="nav-item d-none d-lg-block">
                            <div id="nav-profile" class="dropdown" :class="{ 'show': showProfileMenu }">
                                <a
                                    class="nav-link dropdown-toggle c-pointer"
                                    aria-haspopup="true"
                                    :aria-expanded="showProfileMenu"
                                    @click="toggleProfileMenu"
                                    v-on-clickaway="hideProfileMenu"
                                >
                                    <i class="icon-user-avatar d-none d-lg-block"></i>
                                </a>
                                <div
                                    class="dropdown-menu dropdown-menu-right align-self-end align-self-lg-center profile-menu"
                                    :class="{ 'show': showProfileMenu }"                                    
                                >
                                    {% if prelaunch.isFinished() %}
                                        <a
                                            class="dropdown-item"
                                            href="{{ path('profile') }}/{%- if (app.user.profile.pageurl is defined) -%}{{ app.user.profile.pageurl }}{%- endif -%}"
                                        >
                                            <span class="icon-profile float-left mt-1 mr-2 d-none d-lg-inline"></span>
                                            Profile
                                        </a>
                                    {% endif %}
                                    <a class="dropdown-item" href="{{ path('settings') }}">
                                        <span class="icon-settings float-left mt-1 mr-2 d-none d-lg-inline"></span>
                                        Settings
                                    </a>
                                    <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">
                                        <span class="icon-logout float-left mt-1 mr-2 d-none d-lg-inline"></span>
                                        Log Out
                                    </a>
                                </div>
                            </div>
                        </li>
                    {% else %}
                        <li class="align-self-center">
                            <a href="{{ path('fos_user_security_logout') }}" class="nav-link"><span>Log Out</span></a>
                        </li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
