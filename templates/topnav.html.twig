{% set show_links = app.user and not is_granted('IS_AUTHENTICATED_2FA_IN_PROGRESS') %}
{% set route = app.request.get('_route') %}
{% set show_info_bar = app.session.get('show_info_bar', true) %}

{% if is_hacker_allowed %}
    <div id="admin-menu">
        <admin-menu :is-user-logged="{{ app.user ? 'true' : 'false' }}"></admin-menu>
    </div>
    {% if show_info_bar %}
        <div id="info-bar">
            <info-bar
                username="{{ app.user.username|default('') }}"
                auth-code="{{ app.user.EmailAuthCode|default('') }}"
                environment="{{ app.environment() }}"
            ></info-bar>
        </div>
    {% endif %}
{% endif %}
<nav class="navbar top-navbar navbar-expand-lg" id="navbar">
    <div class="container-fluid">
        <a class="order-first navbar-brand" href="{{ path('homepage') }}">
            {% if is_beta_version %}
                <div class="badge badge-beta">{% trans %}beta{% endtrans %}</div>
            {% endif %}
                <img
                    {% if is_beta_version %}
                        class="ml-3 ml-lg-0 mintme-logo"
                    {% else %}
                        class="mintme-logo"
                    {% endif %}
                    src="{{ asset('build/images/logo.svg') }}"
                    alt="mintMe"
                >
        </a>
        <div class="order-1 order-lg-3">
            {% if show_links %}
                <div class="float-left d-flex align-items-center m-lg-0">
                    <user-notification class="small-bell mx-xs-1 mx-sm-2 m-lg-0"></user-notification>
                    <nav-envelope class="mx-xs-1 mx-sm-2 m-lg-0 pr-sm-1" href="{{ path('chat') }}"></nav-envelope>
                </div>
            {% endif %}
                <button
                    class="navbar-toggler"
                    :class="{ 'collapsed': !showNavbarMenu }"
                    type="button"
                    :aria-expanded="showNavbarMenu"
                    aria-label="Toggle navigation"
                    @click="toggleNavbarMenu"
                >
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="order-2 collapse navbar-collapse" :class="{ 'show': showNavbarMenu }">
            <form class="form-inline justify-content-center py-3 py-lg-0 pr-0 pr-lg-3 {{ app.user ? 'ml-mx-5' : 'ml-mx-4' }}">
                <token-searcher
                    class="flex-nowrap justify-content-center pr-0 align-items-center v-cloak--hidden mr-1"
                    search-url="{{ path('token_search') }}"
                ></token-searcher>
                <div class="v-cloak--flex justify-content-center align-items-center ml-1">
                    <input
                        class="search-input form-control no-bg-img"
                        placeholder="Search for the token"
                        type="text"
                    >
                    <svg
                        width="19.5"
                        height="19.5"
                        aria-hidden="true"
                        focusable="false"
                        data-prefix="fas"
                        data-icon="search"
                        role="img"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 512 512"
                        class="search-icon fa-search"
                    >
                        <path
                            d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7
                            44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0
                            92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4
                            33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128
                            0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"
                        ></path>
                    </svg>
                </div>
            </form>
            <ul class="navbar-nav ml-auto">
                {% if show_links %}
                    <li class="nav-item menu-token align-self-center text-lg-left text-center {{ route starts with 'token' ? 'active' : '' }}">
                        <a href="{{ path('token_create') }}" class="nav-link">
                            <span class="icon-token float-left mt-1 mr-1 d-none d-lg-inline {{ route starts with 'token' ? 'icon-token-active' : '' }}"></span>
                            {% trans %}navbar.my_token{% endtrans %}
                        </a>
                    </li>
                {% endif %}
                <li class="nav-item align-self-center {{ route == 'trading' ? 'active' : '' }}">
                    <a href="{{ path('trading') }}" class="nav-link">
                        {% trans %}navbar.trading{% endtrans %}
                    </a>
                </li>

                {% if show_links %}
                    <li class="nav-item align-self-center {{ route == 'show_user_home' ? 'active' : '' }}">
                        <a href="{{ path('show_user_home') }}" class="nav-link">
                            {% trans %}navbar.home{% endtrans %}
                        </a>
                    </li>
                {% endif %}

                <li class="nav-item align-self-center {{ route starts with 'sonata_news' ? 'active' : '' }}">
                    <a href="{{ path('sonata_news_home') }}" class="nav-link">
                        {% trans %}navbar.news{% endtrans %}
                    </a>
                </li>
                {% if show_links %}
                    <li class="nav-item align-self-center {{ route == 'referral-program' ? 'active' : '' }}">
                        <a href="{{ path('referral-program') }}" class="nav-link">
                            {% trans %}navbar.referrals{% endtrans %}
                        </a>
                    </li>
                {% endif %}
                <li class="nav-item align-self-center {{ route starts with 'kb' ? 'active' : '' }}">
                    <a href="{{ path('kb') }}" class="nav-link">
                        {% trans %}navbar.help{% endtrans %}
                    </a>
                </li>
                <li class="nav-item align-self-center {{ route starts with 'voting' ? 'active' : '' }}">
                    <a href="{{ path('voting') }}" class="nav-link">
                        {% trans %}voting.voting{% endtrans %}
                    </a>
                </li>
                {% if not app.user %}
                    <li class="nav-item align-self-center {{ route == 'fos_user_security_login' ? 'active' : '' }}">
                        <a href="{{ path('fos_user_security_login') }}" class="nav-link">
                            {% trans %}log_in{% endtrans %}
                        </a>
                    </li>
                    <li class="nav-item align-self-center {{ route == 'fos_user_registration_register' ? 'active' : '' }}">
                        <a href="{{ path('fos_user_registration_register') }}" class="nav-link">
                            {% trans %}sign_up{% endtrans %}
                        </a>
                    </li>
                {% else %}
                    {% if show_links %}
                        <li class="nav-item align-self-center d-lg-none {{ route == 'wallet' ? 'active' : '' }}">
                            <a
                                href="{{ path('wallet') }}"
                                class="nav-link"
                            >
                                <span>{% trans %}navbar.wallet{% endtrans %}</span>
                            </a>
                        </li>
                        <li class="nav-item align-self-center d-lg-none {{ route starts with 'profile' ? 'active' : '' }}">
                            <a
                                href="{{ path('profile') }}/{{ app.user.profile.nickname }}"
                                class="nav-link"
                            >
                                <span>{% trans %}navbar.profile{% endtrans %}</span>
                            </a>
                        </li>
                        <li class="nav-item align-self-center d-lg-none {{ route == 'settings' or route == 'two_factor_auth' ? 'active' : '' }}">
                            <a href="{{ path('settings') }}" class="nav-link">
                                <span>{% trans %}navbar.settings{% endtrans %}</span>
                            </a>
                        </li>
                        {% if app.user.profile.hasTokens %}
                            <li class="nav-item align-self-center d-lg-none">
                                <a href="{{ path('token_show_modal') }}" class="nav-link">
                                    <span>{% trans %}navbar.token_show_modal{% endtrans %}</span>
                                </a>
                            </li>
                        {% endif %}
                        <li class="nav-item align-self-center d-lg-none {{ route == 'fos_user_security_logout' ? 'active' : '' }}">
                            <form action="{{ path('fos_user_security_logout') }}" method="post" id="form-button-logout">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}" id="csrf-token"/>
                                <button
                                    class="logout-link"
                                    type="submit"
                                    id="_submit"
                                    name="_submit"
                                >
                                    {% trans %}log_out{% endtrans %}
                                </button>
                            </form>
                        </li>
                    {% else %}
                        <li class="align-self-center">
                            <form action="{{ path('fos_user_security_logout') }}" method="post" id="form-button-logout-lg">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}" id="csrf-token-lg"/>
                                <button
                                    class="logout-link"
                                    type="submit"
                                    id="_submit_lg"
                                    name="_submit"
                                >
                                    {% trans %}log_out{% endtrans %}
                                </button>
                            </form>
                        </li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
        {% if show_links %}
            <div class="order-last pr-0 dropdown d-none d-lg-block float-right" :class="{ 'show': showProfileMenu }" id="nav-profile">
                <a
                    class="nav-link pl-3 pr-0 dropdown-toggle c-pointer"
                    aria-haspopup="true"
                    :aria-expanded="showProfileMenu"
                    @click="toggleProfileMenu"
                    v-on-clickaway="hideProfileMenu"
                    tabindex="0"
                    @keyup.enter="toggleProfileMenu"
                >
                    <avatar
                        class="{% if app.user.profile.image.url == '/media/default_profile.png' %}default-user-avatar-topnav{% endif %}"
                        size="middle"
                        type="profile"
                        image="{{ app.user.profile.image.url | imagine_filter('avatar_middle') }}"
                    ></avatar>
                </a>
                <div
                    class="dropdown-menu dropdown-menu-right align-self-end align-self-lg-center profile-menu"
                    :class="{ 'show': showProfileMenu }"
                >
                    <a class="dropdown-item {{ route == 'wallet' ? 'active' : '' }}" href="{{ path('wallet') }}">
                        <span class="icon-wallet float-left mt-1 mr-2 d-none d-lg-inline"></span>
                        {% trans %}navbar.wallet{% endtrans %}
                    </a>
                    <a
                        class="dropdown-item {{ route starts with 'profile' ? 'active' : '' }}"
                        href="{{ path('profile') }}/{{ app.user.profile.nickname }}"
                        tabindex="0"
                    >
                        <span class="icon-profile float-left mt-1 mr-2 d-none d-lg-inline"></span>
                        {% trans %}navbar.profile{% endtrans %}
                    </a>
                    <a class="dropdown-item {{ route == 'settings' or route == 'two_factor_auth' ? 'active' : '' }}" href="{{ path('settings') }}">
                        <span class="icon-settings float-left mt-1 mr-2 d-none d-lg-inline"></span>
                        {% trans %}navbar.settings{% endtrans %}
                    </a>
                    {% if app.user.profile.hasTokens %}
                        <a class="dropdown-item" href="{{ path('token_show_modal') }}">
                            <span class="icon-token-drop-down float-left mt-1 mr-2 d-none d-lg-inline"></span>
                            {% trans %}navbar.token_show_modal{% endtrans %}
                        </a>
                    {% endif %}
                    <form action="{{ path('fos_user_security_logout') }}" method="post" id="form-button-logout-lg">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}" id="csrf-token-lg"/>
                        <span class="dropdown-item">
                            <button
                                class="logout"
                                type="submit"
                                id="_submit_lg"
                                name="_submit"
                                tabindex="0"
                            >
                                <span class="icon-logout float-left mt-1 mr-2 d-none d-lg-inline"></span>
                                {% trans %}log_out{% endtrans %}
                            </button>
                        </span>
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
</nav>
{% if app.request.attributes.get('_route') != 'homepage' and
    app.request.attributes.get('_route') != '2fa_login' and
    app.request.attributes.get('_route') != 'phone_verification' and
    app.user is not null and
    (app.user.profile.phoneNumber is null or
    not app.user.profile.phoneNumber.verified)
%}
        <div class="add-phone-notification">
            <div class="alert alert-primary" role="alert">
                {% trans with {'%url%': path('profile-view', {'nickname': app.user.profile.nickname, 'edit': true}) } %}
                    phone.add_number.notification
                {% endtrans %}
            </div>
        </div>
{% endif %}
