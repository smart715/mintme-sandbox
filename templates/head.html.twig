{% set languages = global_translation_flags | keys %}
{% set pathInfoWithoutLocale = 'en' == app.request.locale
    ? app.request.pathInfo
    : app.request.pathInfo|replace({('/' ~ app.request.locale): ''})
%}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, target-densityDpi=device-dpi" />
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<meta name="keywords" content="mintMe,MINTME,crypto,exchanger,token,dapps">
<meta name="author" content="mintme">
<meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
{% if viabtc_offset != 0 %}
    <meta name="X-USER-OFFSET" content="{{ viabtc_offset }}">
{% endif %}
{% for language in languages -%}
    {% set localePath = 'en' == language  ? '' : '/' ~ language %}
    <link
        rel="alternate"
        {% if 'en' == language %}
            x-default
        {% endif %}
        href="{{ app.request.scheme ~ '://' ~ app.request.host ~ localePath ~ pathInfoWithoutLocale }}"
        hreflang="{{ language }}"
    />
{% endfor %}
<link rel="apple-touch-icon" sizes="57x57" href="{{ asset('build/images/apple-icon-57x57.png') }}">
